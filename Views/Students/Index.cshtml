@model List<LABA3.Models.Entities.Student>

<h1>Students</h1>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.Name</td>
            <td>
                <a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
            </td>
            <td>
                <a class="btn btn-primary" asp-controller="Students" asp-action="Details" asp-route-id="@student.Id">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<div class="mt-3">
    <a class="mt-3" asp-action="Create">Create New</a>
</div>