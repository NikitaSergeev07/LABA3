@model LABA3.Models.Entities.Course

<h1>Edit Course</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly/>
    </div>
    
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name"/>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Courses">Delete</button>
    </div>
    
</form>

<div>
    <a class="mt-3" asp-action="Index">Back to List</a>
</div>